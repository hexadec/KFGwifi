<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Login data">
        <CheckBoxPreference
            android:key="autologin"
            android:title="Enable autologin" />
        <EditTextPreference
            android:key="username"
            android:singleLine="true"
            android:title="Username" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="password"
            android:singleLine="true"
            android:title="Password" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="security"
            android:summary="Disable if something is not working properly"
            android:title="Extra security" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Timeout options">
        <CheckBoxPreference
            android:key="timeout"
            android:title="Basic/Normal mode" />
        <CheckBoxPreference
            android:key="stamina"
            android:title="Special/Alternative mode" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Manual">
        <Preference
            android:key="manual_login"
            android:title="Login now" />
        <Preference
            android:key="open_login_page"
            android:title="Open login page" />
        <Preference
            android:key="connect"
            android:summary="Connect to kfg wifi"
            android:title="Connect to kfg" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Info">
        <Preference
            android:key="about"
            android:title="About" />
    </PreferenceCategory>

</PreferenceScreen>
